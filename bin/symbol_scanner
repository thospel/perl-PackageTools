#!/usr/bin/perl -w
use strict;
use PPI;
use vars qw($package %lexical)

sub scan_code {
    my ($node, $depth) = @_;
    $depth++;
    for my $child ($node->schildren) {
        scan_code($child, $depth);
    }
}

sub scan_file {
    my ($file) = @_;

    my $ppi = PPI::Document->new($file, readonly => 1);
    local $package = "main";
    local %lexical;
    scan_code($ppi, 0);
}

scan_file($_) for @ARGV;
